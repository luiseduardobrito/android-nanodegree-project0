<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application Toolbar Style -->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">

        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/text</item>

        <!-- Toolbar min height -->
        <item name="android:minHeight">@dimen/toolbar_height</item>

        <!-- Toolbar text colors -->
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="actionMenuTextColor">@color/text</item>

        <!-- Toolbar popup style -->
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat.Light</item>

        <!-- Toolbar contents gravity -->
        <item name="android:gravity">center_vertical</item>

    </style>

</resources>
